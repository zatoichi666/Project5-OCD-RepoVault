<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <system.serviceModel>
    <extensions>
      <bindingElementExtensions>
        <add name="pgmTransport"
             type="PgmTransport.Configuration.PgmTransportElement, PgmTransport" />
      </bindingElementExtensions>
    </extensions>
    <behaviors>
      <serviceBehaviors>
        <behavior name="LatestNews.Service1Behavior">
          <serviceMetadata httpGetEnabled="false" />
          <serviceDebug includeExceptionDetailInFaults="false" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <bindings>
      <customBinding>
        <binding name="NewsUpdateService">
          <binaryMessageEncoding />
          <pgmTransport maxMessageSize="65536"
                        dataMode = "Message">
            <diagnostics enabled="true" interval="00:00:05" directory="C:\PgmLogs" />
          </pgmTransport>
        </binding>
      </customBinding>
    </bindings>
    <services>
      <service behaviorConfiguration="LatestNews.Service1Behavior"
          name="LatestNews.NewsUpdater">
        <endpoint address="net.pgm://227.0.1.2:5002/NewsUpdateService"
                  binding="customBinding"
                  contract="LatestNews.INewsUpdate"
                  bindingConfiguration="NewsUpdateService">
          <identity>
            <dns value="localhost" />
          </identity>
        </endpoint>
        <!--<endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8731/Design_Time_Addresses/LatestNews/Service1/" />
          </baseAddresses>
        </host>-->
      </service>
    </services>
  </system.serviceModel>
</configuration>
